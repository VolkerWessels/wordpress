{
	servers {
		timeouts {
			read_body 10s
			read_header 10s
			write 10s
			idle 2m
		}
		max_header_size 16384
	}

	local_certs
	auto_https disable_redirects
}

import ./config

localhost:443 {
	tls {
		on_demand
		protocols tls1.2 tls1.3
	}

	root * /home/site/wwwroot
	import mustheaders
	import compression
	# To put site in maintenance mode replace "online yes" with "online no"
	# Optionally create a 503.html page
	import online yes
	import security
	import caching
	import php
	import handle_error

	respond /healthcheck 200

	import logs-stdout
}
